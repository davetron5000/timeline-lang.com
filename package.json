{
  "name": "timeline-lang.com",
  "version": "1.0.0",
  "description": "Website for the Timeline Programming Language",
  "main": "index.js",
  "author": "David Copeland",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "html-minifier": "^4.0.0",
    "http-server": "^0.11.1"
  },
  "scripts": {
    "build": "$(yarn bin)/html-minifier -c config/html-minifier.conf --input-dir=src/html --output-dir=site/",
    "serve": "yarn build && $(yarn bin)/http-server site",
    "upload": "aws s3 sync --cache-control=\"max-age=3600\" --profile=personal site/ s3://timeline-lang.com",
    "invalidate": "aws cloudfront create-invalidation --profile=personal --distribution-id=E8T2XNPHWMAQO --paths=/index.html",
    "deploy": "yarn build && yarn upload && yarn invalidate"
  }
}
